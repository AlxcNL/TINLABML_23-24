    common-aliases
    cp
    docker
    docker-compose
    emoji
    fig
    git
    git-auto-fetch
    git-commit    
    git-flow
    git-prompt
    gh
    last-working-dir
    pip
    pipenv
    python    
    spaceship-ember
    zsh-autosuggestions 
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

